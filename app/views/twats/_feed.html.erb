<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png" alt="">
      </p>
    </figure>
    <div class="media-content">
<%= render 'twats/form' %>
    </div>
  </article>


<% @twats.each do |twat| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png" alt="">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong>Vitalii Kemeniash</strong> <br/>
          <small>@epam</small><br/>
          <p><%= twat.twat %></p>
        </div>
        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to twat, class: "level-item" do %>
              <span class="icon">
                <i class="fa fa-link" aria-hidden="true"></i>
              </span>
            <% end %>
            <%= link_to edit_twat_path(twat), class: "level-item" do %>
             <span class="icon">
                <i class="fa fa-pencil" aria-hidden="true"></i>
              </span>
            <% end %>
            <%= link_to twat, method: :delete, data: { confirm: "Are U sure u want to delete this?" } do %>
             <span class="icon">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
              </span>
            <% end %>
          </div>
        </nav>
      </div>
    </article>
  </div>
<% end %>
</div>