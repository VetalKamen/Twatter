<%= simple_form_for(@twat) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :twat, label: "Twat about it",
                  input_html: { class: "textarea" },
                  wrapper: false, label_html: { class: "label" },
                  placeholder: "Compose a new twat..." %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>